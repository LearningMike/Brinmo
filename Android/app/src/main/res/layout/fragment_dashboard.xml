<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:background="@color/colorSecondary"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/location"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/listviewish"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/store"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="28"
                    android:text="Shops &amp; Stores"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.8"
                    android:textSize="18sp"
                    android:textStyle="normal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Get Groceries"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.8"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/storenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.4"
                    android:text="places"
                    android:textSize="14sp"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/listviewish"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/food"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="28"
                    android:text="Restaurants/Fast-food"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.8"
                    android:textSize="18sp"
                    android:textStyle="normal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Eat Good"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.8"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/foodnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.4"
                    android:text="places"
                    android:textSize="14sp"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/laundry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/listviewish"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/laundry"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="28"
                    android:text="Laundry Services"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.8"
                    android:textSize="18sp"
                    android:textStyle="normal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Clean Clothes"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.8"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/laundrynum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.4"
                    android:text="people"
                    android:textSize="14sp"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hairsalon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/listviewish"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/hairsalon"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="28"
                    android:text="Hair Salons"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.8"
                    android:textSize="18sp"
                    android:textStyle="normal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="New Hairstyle"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.8"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/hairsalonnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.4"
                    android:text="places"
                    android:textSize="14sp"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/barbershop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/listviewish"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/barbershop"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="28"
                    android:text="Barber Shops"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.8"
                    android:textSize="18sp"
                    android:textStyle="normal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Nice Haircut"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.8"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/barbershopnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.4"
                    android:text="places"
                    android:textSize="14sp"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/transport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/listviewish"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/driver"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="28"
                    android:text="Cab Drivers"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.8"
                    android:textSize="18sp"
                    android:textStyle="normal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Smooth Ride"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.8"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/transportnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.4"
                    android:text="people"
                    android:textSize="14sp"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fashion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/listviewish"
            android:paddingVertical="15dp"
            android:paddingHorizontal="25dp"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/fashion"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="28"
                    android:text="Fashion &amp; Drip"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.8"
                    android:textSize="18sp"
                    android:textStyle="normal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Fancy Stuff"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.8"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fashionnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="@color/colorOnSecondary"
                    android:alpha="0.4"
                    android:text="places"
                    android:textSize="14sp"/>


            </LinearLayout>

        </LinearLayout>

        <android.widget.Button
            android:id="@+id/addcategory"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_empty"
            android:text="   Add a Category   "
            android:drawableStart="@drawable/ic_menu_plus"
            android:drawableTint="@color/colorOnSecondary"
            android:textAllCaps="false"
            android:textColor="@color/colorOnSecondary"
            android:textSize="14sp"
            android:textStyle="normal"
            android:alpha="0.6"/>

    </LinearLayout>

</ScrollView>