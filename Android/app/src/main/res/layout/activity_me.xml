<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeActivity">

    <ImageButton
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/facb"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_bbg"
        android:layout_margin="15dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_back"
        android:elevation="10dp"
        android:translationZ="10dp">

    </ImageButton>

    <ImageButton
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/fash"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_bbg"
        android:layout_margin="15dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_menu_share"
        android:elevation="10dp"
        android:translationZ="10dp">

    </ImageButton>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scrollbars="none"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/cimage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:alpha="0.4" />

            <LinearLayout
                android:id="@+id/bspace"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:background="@color/colorBlueShade"
                android:layout_alignBottom="@+id/cimage">

                <TextView
                    android:id="@+id/cname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="3"
                    android:maxLength="30"/>

                <TextView
                    android:id="@+id/dateView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="1"
                    android:alpha="0.6"
                    android:text="joined ..., ...."
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bspace"
                android:orientation="vertical">

                <android.widget.Button
                    android:id="@+id/me_history"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/round_empty"
                    android:textSize="16sp"
                    android:text="History"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_menu_history"
                    android:paddingHorizontal="30dp"
                    />

                <android.widget.Button
                    android:id="@+id/me_settings"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/round_empty"
                    android:textSize="16sp"
                    android:text="Settings"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_menu_settings"
                    android:paddingHorizontal="30dp"
                    />

                <android.widget.Button
                    android:id="@+id/me_addmy"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/round_empty"
                    android:textSize="16sp"
                    android:text="My Business"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_add_business"
                    android:paddingHorizontal="30dp"
                    />

                <android.widget.Button
                    android:id="@+id/me_invite"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/round_empty"
                    android:textSize="16sp"
                    android:text="Invite A Business"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_menu_invite"
                    android:paddingHorizontal="30dp"
                    />

                <android.widget.Button
                    android:id="@+id/me_report"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/round_empty"
                    android:textSize="16sp"
                    android:text="Report A Problem"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_menu_report"
                    android:paddingHorizontal="30dp"
                    />

                <android.widget.Button
                    android:id="@+id/me_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/round_empty"
                    android:textSize="16sp"
                    android:text="Privacy"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_menu_privacy"
                    android:paddingHorizontal="30dp"
                    />

                <android.widget.Button
                    android:id="@+id/me_terms"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/round_empty"
                    android:textSize="16sp"
                    android:text="Terms"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_menu_terms"
                    android:paddingHorizontal="30dp"
                    />
                <android.widget.Button
                    android:id="@+id/easter_egg"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:paddingHorizontal="30dp"
                    />
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>