<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context=".AmountActivity">

    <TextView
        android:id="@+id/pusern"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Enter an Amount"
        android:textColor="@color/colorWhite"
        android:drawableBottom="@drawable/ic_keydown"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/amount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="170dp"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="5"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorPrimary"
        android:hint="â‚¦"
        android:textColorHint="@color/colorAccent"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:background="@drawable/round_wbg"/>

    <android.widget.Button
        android:id="@+id/paytap"
        app:layout_constraintTop_toBottomOf="@id/amount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="18dp"
        android:text="   Pay   "
        android:textColor="@color/colorPrimary"
        android:textAppearance="?android:textAppearanceMedium"
        android:background="@drawable/round_wbg"/>

    <TextView
        android:id="@+id/paycharge"
        app:layout_constraintTop_toBottomOf="@id/paytap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/colorWhite"
        android:text="Free Transfer"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:alpha="0.6"
        android:textSize="14sp" />

</androidx.constraintlayout.widget.ConstraintLayout>